@model ChangeRoleViewModel

@{
    ViewBag.Title = "Change Role";
    Layout = "_Layout";
}

<h2>@ViewBag.Title</h2>

<p class="bg-info">
    You are changing the role for <b>@Model.Email</b>.
</p>

<form asp-action="ChangeRole"
      class="form-horizontal">
    <input type="hidden" asp-for="UserId"/>
    <div class="form-group">
        <label asp-for="RoleName"
               class="col-md-2"></label>
        <div class="col-md-10">
            <select asp-for="RoleName"
                    asp-items="Model.RoleNameSelectListItems"></select>
        </div>
    </div>
    <div class="form-group">
        <input type="submit"
               class="btn btn-primary"
               value="Change Role"/>
        <a asp-action="Index"
           class="btn btn-danger">Cancel</a>
    </div>
</form>
